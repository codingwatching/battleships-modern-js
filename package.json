{
	"name": "my-app",
	"version": "0.0.1",
	"scripts": {
		"eslint": "node_modules/.bin/eslint -- ./src",
		"jest": "node_modules/.bin/jest",
		"format": "prettier --write \"src/**/*.{js,jsx}\"",
		"lint": "prettier --check \"src/**/*.{js,jsx}\"",
		"start": "snowpack dev",
		"build": "snowpack build",
		"prepare": "husky install",
		"pre-commit-lint": "lint-staged"
	},
	"lint-staged": {
		"src/**/*": [
			"pnpm format"
		]
	},
	"jest": {
		"verbose": false,
		"setupFiles": [
			"<rootDir>/src/config/tests/setup/settings.js",
			"<rootDir>/src/config/tests/setup/overrides.js"
		],
		"collectCoverage": false,
		"collectCoverageFrom": [
			"src/**/*.{js,jsx}",
			"!**/node_modules/**",
			"!**/vendor/**"
		],
		"coverageDirectory": "coverage",
		"notify": true,
		"slowTestThreshold": 2,
		"reporters": [
			"default"
		],
		"testPathIgnorePatterns": [
			"<rootDir>/src/config/tests/setup/"
		]
	},
	"main": "src/client/index.js",
	"moduleNameMapper": {
		"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/config/tests/setup/fileMock.js"
	},
	"devDependencies": {
		"@snowpack/plugin-babel": "^2.1.7",
		"@snowpack/plugin-react-refresh": "^2.5.0",
		"@snowpack/plugin-webpack": "^2.3.1",
		"@wojtekmaj/enzyme-adapter-react-17": "^0.6.1",
		"enzyme": "^3.11.0",
		"eslint": "^7.27.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-jest": "^24.3.6",
		"eslint-plugin-react": "^7.23.2",
		"husky": "^6.0.0",
		"jest": "^27.0.3",
		"lint-staged": "^11.0.0",
		"prettier": "2.3.0",
		"snowpack": "^3.4.0"
	},
	"dependencies": {
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	}
}
