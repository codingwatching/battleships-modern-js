{
  "name": "battleships-modern-js",
  "main": "./src/index.tsx",
  "npm": false,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "eslint": "node_modules/.bin/eslint --fix -- ./src",
    "jest": "node_modules/.bin/jest --detectOpenHandles",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "prepare": "husky install",
    "pretty-quick": "pretty-quick --staged",
    "release": "release-it --no-npm",
    "scan:packages": "auditjs ossi"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "verbose": false,
    "setupFiles": [
      "<rootDir>/src/config/tests/setup/settings.js",
      "<rootDir>/src/config/tests/setup/overrides.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageDirectory": "coverage",
    "notify": true,
    "slowTestThreshold": 2,
    "reporters": [
      "default"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/src/config/tests/setup/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  },
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/config/tests/setup/fileMock.js"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.17",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "auditjs": "^4.0.30",
    "auto-changelog": "^2.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "prettier": "2.3.2",
    "pretty-quick": "^3.1.1",
    "release-it": "^14.11.3",
    "typescript": "^4.3.5",
    "vite": "^2.4.4"
  },
  "dependencies": {
    "@types/react-test-renderer": "^17.0.1",
    "node-notifier": "^10.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "styled-components": "^5.3.0",
    "ts-jest": "^27.0.4"
  }
}
